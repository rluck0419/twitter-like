<div><h4><%= form_title %></h4></div>

<div>
  <% if user.errors.any? %>
    <% user.errors.full_messages.each do |msg| %>
      <p> <%= msg %></p>
    <% end %>
  <% end %>
</div>

<div>
  <%= form_for(user) do |f| %>
    <div class="form-group">
      <label for="handle">Handle: @</label>
      <%= f.text_field :handle, placeholder: user.handle, class: 'form-field' %>
    </div>
    <div class="form-group">
      <label for="name">Name: </label>
      <%= f.text_field :name, placeholder: user.name, class: 'form-field' %>
    </div>
    <div class="form-group">
      <label for="email">Email: </label>
      <%= f.text_field :email, placeholder: user.email, class: 'form-field' %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
