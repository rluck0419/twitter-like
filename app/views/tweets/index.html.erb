<div class='row'>
  <% tweets.reverse.each do |t| %>
    <div class='col-md-4 col-sm-6'>
      <span class='tweet-section'>
        <div class='tweeter'>
          <%= link_to(t.user.name, "users/#{t.user.id}") %>
          <%= link_to("@" + t.user.handle, "users/#{t.user.id}") %>
        </div>
        <div class='tweet-bod'><%= link_to(t.body, "tweets/#{t.id}", class: 'tweet-text') %></div>
        <div class='button'><%= link_to("Show Tweet", "tweets/#{t.id}", class: 'tweet-button2') %></div>
        <div class='button'><%= link_to("Delete Tweet", tweet_path(t), class: 'tweet-button', method: :delete, data: { confirm: 'Are you sure you want to delete this tweet?' }) %></div>
      </span>
    </div>
  <% end %>
</div>
