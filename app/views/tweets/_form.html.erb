<div><h4><%= form_title %></h4></div>

<div>
  <% if tweet.errors.any? %>
    <% tweet.errors.full_messages.each do |msg| %>
      <p> <%= msg %></p>
    <% end %>
  <% end %>
</div>

<div>
  <%= form_for(tweet) do |f| %>
    <div class="form-group">
      <label for="body">Body: </label>
      <%= f.text_area :body, placeholder: Faker::StarWars.quote, class: 'form-field' %>
    </div>
    <div class="form-group">
      <label for="user_id">User ID: </label>
      <%= f.select :user_id, options_from_collection_for_select(User.all, :id, :name) %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
